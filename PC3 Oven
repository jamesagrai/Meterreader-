<body>
  <h1>Enter Meter Reading</h1>
  <p>PC3 Oven</p>
  <input type="number" id="reading" placeholder="Enter new reading" />
  <button id="submit-reading">Submit Reading</button>

  <script>
    document.getElementById('submit-reading').addEventListener('click', () => {
      const reading = document.getElementById('reading').value;
      if (reading) {
        // Replace with your API Gateway endpoint URL
        const apiUrl = 'https://your-api-gateway-endpoint.amazonaws.com/prod/meter-reading';

        const payload = {
          meterId: 'PC3 Oven',
          reading: reading,
          timestamp: new Date().toISOString(),
        };

        fetch(apiUrl, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(payload),
        })
          .then(response => {
            if (response.ok) {
              alert(`Reading submitted for PC3 Oven: ${reading}`);
              window.location.href = 'qrscanner.html';
            } else {
              throw new Error('Failed to submit reading. Please try again.');
            }
          })
          .catch(error => {
            alert(error.message);
          });
      } else {
        alert('Please enter a reading');
      }
    });
  </script>
</body>
